@using CodeJooyan.Domain.ViewModel.Common.Filter;
@model PagingViewModel

@if (Model.PageCount > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.StartPage < Model.Page)
            {
                <li class="page-item prev">
                    <a class="page-link" href="javascript:void(0);"><i class="tf-icon bx bx-chevrons-left"></i></a>
                </li>
            }
            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                if (Model.Page == i)
                {
                    <li class="page-item active">
                        <a class="page-link" data-page="0" href="javascript:void(0)">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a data-page="@i" class="page-link" href="?page=@i">@i</a>
                    </li>
                }
            }
            @if (Model.EndPage > Model.Page)
            {
                <li class="page-item next">
                    <a data-page="@(Model.Page + 1)" class="page-link" href="?page=@(Model.Page +1)">
                        <i class="tf-icon bx bx-chevrons-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
}